{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "src",
		"importHelpers": true,
		"outDir": "./dist/out-tsc",
		"paths": {
			"@app/*": [
				"app/*"
			]
		},
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2015",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2018",
			"dom"
		],
		"module": "esnext"
	}
}
